        android:text="以下车次即将到达预约时间"
        android:textColor="#333"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>